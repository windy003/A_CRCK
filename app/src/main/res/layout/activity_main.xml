<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙按键映射器"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态信息"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvBluetoothStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙: 检查中..."
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvPermissionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="权限: 检查中..."
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvAccessibilityStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无障碍服务: 检查中..."
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEnableBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用蓝牙"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnPermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求权限"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAccessibilitySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开无障碍设置"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnToggleService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动服务"
        android:background="@android:color/holo_green_light"
        android:layout_marginBottom="24dp" />

    <!-- YouTube模式开关区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="YouTube模式"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchYoutubeMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvYoutubeModeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YouTube模式已开启 - dpad left双击屏幕后退5秒"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="16dp" />

    <!-- 电视模式开关区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始电视模式16:9"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchTvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTvModeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="电视模式已关闭 - 使用正常点击位置"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="16dp" />

    <!-- 百度网盘模式开关区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="百度网盘模式"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchBaiduMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvBaiduModeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="百度网盘模式已关闭"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="16dp" />

    <!-- TikTok/抖音模式开关区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TikTok/抖音模式"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchTiktokMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTiktokModeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TikTok/抖音模式已关闭"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="16dp" />

    <!-- 客制化像素输入区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="客制化滑动像素设置"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="滑动像素值："
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/etSwipePixels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入滑动像素值 (如: 100)"
            android:inputType="number"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnSavePixels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="说明：此设置仅在TikTok/抖音模式下生效，用于控制滑动手势的距离"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用说明：\n1. 确保蓝牙已启用并配对遥控器\n2. 授予所需权限\n3. 在设置中启用无障碍服务\n4. 启动服务\n5. 按遥控器OK键映射为媒体播放/暂停\n6. YouTube模式：dpad left双击屏幕后退5秒，home键竖屏点击(1029,649)，menu键横屏返回\n7. 百度网盘模式：OK键播放/暂停，左右键上一曲/下一曲\n8. 电视模式：使用16:9全屏坐标\n9. TikTok/抖音模式：左右键从(566,2213)滑动，上下键已禁用，Home键从(900,2213)滑动到(0,2213)重置进度条，OK键播放/暂停，支持客制化滑动像素"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_light"
        android:padding="16dp" />

</LinearLayout>

</ScrollView>