<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙按键映射器"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态信息"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvBluetoothStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙: 检查中..."
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvPermissionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="权限: 检查中..."
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvAccessibilityStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无障碍服务: 检查中..."
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEnableBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用蓝牙"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnPermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求权限"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAccessibilitySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开无障碍设置"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnToggleService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动服务"
        android:background="@android:color/holo_green_light"
        android:layout_marginBottom="24dp" />

    <!-- 双击映射功能开关区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="双击映射设置"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="dpad left → 双击屏幕后退5秒"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchDoubleClickMapping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvMappingStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态: 双击映射已开启"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="16dp" />

    <!-- 电视模式开关区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电视模式 (20.5:9 比例)"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/switchTvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTvModeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="电视模式已关闭 - 使用正常点击位置"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用说明：\n1. 确保蓝牙已启用并配对遥控器\n2. 授予所需权限\n3. 在设置中启用无障碍服务\n4. 启动服务\n5. 按遥控器OK键映射为媒体播放/暂停\n6. 按遥控器左方向键双击屏幕后退5秒（可开关）"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_light"
        android:padding="16dp" />

</LinearLayout>